<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="175dp"
        android:id="@+id/report_headerimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/read_report_bg"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/read_report"
        android:id="@+id/read_reportheadline"
        android:textColor="@color/main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="55dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/report_subheadline"
        android:textColor="@color/main"
        android:textSize="25dp"
        android:id="@+id/read_reportsubheadline"
        android:layout_below="@+id/read_reportheadline"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/report_list"
        android:layout_below="@+id/report_headerimage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</RelativeLayout>