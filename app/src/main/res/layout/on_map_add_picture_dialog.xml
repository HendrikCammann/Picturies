<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff">

    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Abbrechen"
        android:layout_alignParentBottom="true"
        android:id="@+id/cancel_button"
        android:layout_marginLeft="10dp"
        android:background="@color/main"
        android:layout_marginBottom="15dp"
        android:textSize="14dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Speichern"
        android:id="@+id/speichern_button"
        android:background="@color/main"
        android:textColor="#ffffffff"
        android:textSize="14dp"
        android:singleLine="false"
        android:layout_alignTop="@+id/cancel_button"
        android:layout_alignRight="@+id/pictureDescriptionEditText"
        android:layout_alignEnd="@+id/pictureDescriptionEditText" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/selectedImage"
        android:src="@drawable/gallery_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pictureTitleEditText"
        android:layout_alignLeft="@+id/selectedImage"
        android:layout_alignStart="@+id/selectedImage"
        android:layout_below="@+id/selectedImage"
        android:layout_marginTop="60dp"
        android:hint="Titel"
        android:textColor="@color/main"
        android:textColorHint="@color/main"
        android:singleLine="false"
        android:editable="true"
        android:shadowColor="@color/main"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pictureDescriptionEditText"
        android:layout_alignLeft="@+id/pictureTitleEditText"
        android:layout_alignStart="@+id/pictureTitleEditText"
        android:layout_below="@+id/pictureTitleEditText"
        android:hint="Beschreibung"
        android:textColor="@color/main"
        android:textColorHint="@color/main"
        android:textColorLink="@color/main"
        android:textColorHighlight="@color/main"
        android:layout_marginRight="10dp"
        android:textSize="20dp" />

</RelativeLayout>