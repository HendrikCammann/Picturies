<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bericht erstellen"
        android:id="@+id/create_report_headline"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:textSize="30dp"
        android:textColor="#ffa31258" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image_view_icon"
        android:src="@drawable/report_icon"
        android:layout_below="@+id/create_report_headline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:hint="Name des Bericht"
        android:id="@+id/create_report_name"
        android:layout_below="@+id/create_report_headline"
        android:layout_toRightOf="@+id/image_view_icon"
        android:layout_toEndOf="@+id/image_view_icon"
        android:layout_marginTop="14dp"
        android:textSize="20dp"
        android:textColor="#ffa31258"
        android:layout_marginLeft="10dp"
        android:textColorHint="#ffa31258"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/create_report_name"
        android:text="Bilder auswÃ¤hlen"
        android:id="@+id/chosse_pictures_headline"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:textSize="25dp"
        android:textColor="#ffa31258" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/image_list"
        android:layout_below="@+id/chosse_pictures_headline"
        android:layout_width="match_parent"
        android:layout_height="275dp" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Abbrechen"
        android:id="@+id/cancel_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:background="#ffa31258"
        android:layout_marginBottom="15dp"
        android:textSize="14dp"
        android:textColor="#ffffffff"/>

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Speichern"
        android:id="@+id/save_button"
        android:layout_alignTop="@+id/cancel_button"
        android:layout_toRightOf="@+id/cancel_button"
        android:layout_toEndOf="@+id/cancel_button"
        android:layout_alignParentBottom="true"
        android:background="#ffa31258"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:textColor="#ffffffff"
        android:textSize="14dp"/>

</RelativeLayout>